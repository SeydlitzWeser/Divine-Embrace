<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <!-- Crafting Benches -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[thingClass="Building_WorkTable"]/comps[not(li/@Class="CompProperties_AffectedByFacilities")]</xpath>
        <value>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities></linkableFacilities>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[thingClass="Building_WorkTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
        <value>
            <li>HQC_SacredToolsCabinet</li>
        </value>
    </Operation>

    <!-- HeatPush Benches -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[thingClass="Building_WorkTable_HeatPush"]/comps[not(li/@Class="CompProperties_AffectedByFacilities")]</xpath>
        <value>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities></linkableFacilities>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[thingClass="Building_WorkTable_HeatPush"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
        <value>
            <li>HQC_SacredToolsCabinet</li>
        </value>
    </Operation>
</Patch>