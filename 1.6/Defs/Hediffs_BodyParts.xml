                <li>HQC_DivineSkin</li>
                <li>HQC_HolyEssence</li>
            </thingDefs>
            <categories>
                <li>Medicine</li>
            </categories>
        </fixedIngredientFilter>
        <researchPrerequisites>
            <li>HQC_Apotheosis</li>
        </researchPrerequisites>
    </RecipeDef>

