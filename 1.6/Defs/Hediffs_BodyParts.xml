    <!-- apotheosis surgery -->

    <RecipeDef ParentName="SurgeryFlesh">
        <defName>HQC_ApotheosisSurgery</defName>
        <label>apotheosis surgery</label>
        <description>Transform a mortal into a divine being by replacing their entire body with blessed augmentations. An extremely lengthy and dangerous procedure.</description>
        <descriptionHyperlinks>
            <ThingDef>HQC_DivineBrain</ThingDef>
            <HediffDef>HQC_DivineBrain</HediffDef>
        </descriptionHyperlinks>
        <workerClass>DivineEmbrace.Recipe_ApotheosisSurgery</workerClass>
        <jobString>Performing apotheosis surgery.</jobString>
        <workAmount>15000</workAmount>
        <hideBodyPartNames>true</hideBodyPartNames>
        <targetsBodyPart>false</targetsBodyPart>
        <anesthetize>true</anesthetize>
        <surgerySuccessChanceFactor>1.0</surgerySuccessChanceFactor>
        <deathOnFailedSurgeryChance>0.25</deathOnFailedSurgeryChance>
        <skillRequirements>
            <Medicine>15</Medicine>
        </skillRequirements>
        <recipeUsers>
            <li>Human</li>
        </recipeUsers>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>HQC_HolyEssence</li>
                    </thingDefs>
                </filter>
                <count>100</count>
            </li>
            <li>
                <filter>
                    <categories>
                        <li>Medicine</li>
                    </categories>
                </filter>
                <count>10</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>HQC_DivineBrain</li>
                <li>HQC_DivineEar</li>
                <li>HQC_DivineEye</li>
                <li>HQC_DivineNose</li>
                <li>HQC_DivineJaw</li>
                <li>HQC_DivineHeart</li>
                <li>HQC_DivineLung</li>
                <li>HQC_DivineStomach</li>
                <li>HQC_DivineKidney</li>
